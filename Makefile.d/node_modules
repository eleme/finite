node_modules: package.json
	@                                                                                               \
	test -L node_modules || rm -rf node_modules;                                                    \
	mkdir -p $(cache)/node_modules;                                                                 \
	ln -sf $(cache)/node_modules .;                                                                 \
	cp package.json $(cache);                                                                       \
	cd $(cache)/node_modules && test ! -d .bin || chown $(whoami) .bin;                             \
	cd $(cache) && npm install;                                                                     \
